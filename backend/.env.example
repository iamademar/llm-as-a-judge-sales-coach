# Application Environment
APP_ENV=dev

# API Security (REQUIRED)
# This key must be provided in the x-api-key header for authenticated endpoints
API_KEY=your-secret-api-key-here

# Database Configuration
DB_HOST=db
DB_USER=postgres
DB_PASS=postgres
DB_NAME=llmpaa

# Database URLs
DATABASE_URL=postgresql://postgres:postgres@db:5432/llmpaa
TEST_DATABASE_URL=sqlite:///./test.db

# LLM Configuration
MOCK_LLM=true
MODEL_NAME=gpt-4o-mini

# LLM API Keys (required when MOCK_LLM=false)
# Uncomment and set the appropriate key for your chosen model
# OPENAI_API_KEY=sk-your-openai-api-key-here
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Logging
LOG_LEVEL=INFO

# Feature Flags
FEATURE_SIM=false
